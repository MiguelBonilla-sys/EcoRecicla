<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Inicio">


    <ImageView
        android:id="@+id/imageViewFondo"
        android:layout_width="864dp"
        android:layout_height="1439dp"
        app:srcCompat="@drawable/fondo"
        tools:layout_editor_absoluteX="-120dp"
        tools:layout_editor_absoluteY="-335dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/textViewEco"
            android:layout_width="128dp"
            android:layout_height="82dp"
            android:layout_marginTop="84dp"
            android:layout_marginBottom="1dp"
            android:text="Eco"
            android:textColor="#F3EEEE"
            android:textSize="180px"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textViewRecicla"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.321"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textViewRecicla"
            android:layout_width="230dp"
            android:layout_height="76dp"
            android:layout_marginTop="192dp"
            android:text="Recicla"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="180px"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewSymbol"
            android:layout_width="98dp"
            android:layout_height="111dp"
            android:layout_marginTop="108dp"
            android:layout_marginBottom="81dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayoutBarInicio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.712"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/reciclar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutBarInicio"
            android:layout_width="300dp"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewEco">

            <ImageView
                android:id="@+id/imageViewCircleInicio"
                android:layout_width="298dp"
                android:layout_height="372dp"
                android:alpha="0.8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.571"
                app:srcCompat="@drawable/FondoIn" />

            <TextView
                android:id="@+id/textViewBienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido!"
                android:textColor="#000000"
                android:textSize="35sp"
                app:layout_constraintBottom_toTopOf="@+id/buttonIniciarSesion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageViewCircleInicio"
                app:layout_constraintVertical_bias="0.645" />

            <Button
                android:id="@+id/buttonIniciarSesion"
                android:layout_width="141dp"
                android:layout_height="55dp"
                android:layout_marginBottom="216dp"
                android:text="Iniciar SesiÃ³n"
                android:backgroundTint="@color/GreenALL"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCircleInicio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="141dp"
                android:layout_height="55dp"
                android:text="Crear Cuenta"
                android:backgroundTint="@color/GreenALL"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCircleInicio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSesion"
                app:layout_constraintVertical_bias="0.125" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
